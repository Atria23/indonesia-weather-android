<?xml version="1.0" encoding="utf-8"?>
<!-- Beri ID pada root LinearLayout agar bisa diubah background-nya -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    tools:background="@drawable/pill_background_dark">

    <!-- Hapus textColor hardcoded, gunakan tools:textColor untuk preview -->
    <TextView
        android:id="@+id/tvJam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:alpha="0.8"
        tools:text="Now"
        tools:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="8dp"
        tools:src="@drawable/stormy_icon"
        tools:tint="@android:color/white"
        tools:ignore="ContentDescription" />

    <!-- Hapus textColor hardcoded, gunakan tools:textColor untuk preview -->
    <TextView
        android:id="@+id/tvSuhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        tools:text="19Â°"
        tools:textColor="@android:color/white" />
</LinearLayout>